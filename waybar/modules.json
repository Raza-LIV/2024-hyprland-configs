{
/**********
**[RIGHT]**
**********/
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },        
        "modules": [
            "custom/system",
            "cpu",
            "memory",
            "disk"
        ]
    },
    "custom/system": {
        "format": "",
        "tooltip": false
    },
    "cpu": {
        "format": "󰍛 {usage}%  "
    },
    "memory": {
        "format": " {swapPercentage}%  "
    },
    "disk": {
        "interval": 30,
        "format": " {percentage_used}%  "
    }, 
    "network": {
        "interval": 2,
        "format": "{ifname}",
        "format-wifi": "{icon}",
        "tooltip-format-wifi": "Wi-Fi: {essid}\n{ipaddr}",
        "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
        "format-ethernet": "",
        "tooltip-format-ethernet": "LAN connection\n{ipaddr}",
        "format-disconnected": "",
        "tooltip-format-disconnected": "No connection",
        "max-length": 50,
        "on-click": "nm-connection-editor"
    },
    "hyprland/language": {
        "format": "{short}"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {percent}%",
        "format-icons": ["󰃞", "󰃟", "󰃠"],
        "on-scroll-up": "~/.config/waybar/scripts/brightness --inc",
        "on-scroll-down": "~/.config/waybar/scripts/brightness --dec"
    },
    "battery": {
        "bat": "BAT1",
        "interval": 2,
        "format": "{icon}",
        "format-icons": [
            "󱃍", 
            "󰁺", 
            "󰁻", 
            "󰁼", 
            "󰁽", 
            "󰁾", 
            "󰁿", 
            "󰂀", 
            "󰂁", 
            "󰂂", 
            "󰁹"
        ],
        "format-charging": "󰂄",
        "format-plugged": "󰂄",
        "tooltip-format": "{capacity}%, {timeTo}"
    },
    "clock": {
        "interval": 60,
        "format": "{:%H:%M}",
        "tooltip-format": "   {:%A, the %dth of %B, %Y}"
    }
}
